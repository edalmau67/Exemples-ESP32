#include <Keypad.h>

const byte ROWS = 4; // quatre files
const byte COLS = 4; // quatre columnes

char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};

byte rowPins[ROWS] = {13, 12, 14, 27};
byte colPins[COLS] = {26, 25, 33, 32};

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

String password = "1234";
String input = "";

const int LED = 2;  // LED integrat de l’ESP32

void setup() {
  Serial.begin(115200);
  pinMode(LED, OUTPUT);
  digitalWrite(LED, LOW);
  Serial.println("Introdueix el password:");
}

void loop() {
  char key = keypad.getKey();

  if (key) {
    Serial.print("Has premut: ");
    Serial.println(key);

    if (key == '#') {  
      Serial.print("Password introduït: ");
      Serial.println(input);

      if (input == password) {
        Serial.println("✔ PASSWORD CORRECTE!");
        digitalWrite(LED, HIGH);
      } else {
        Serial.println("❌ PASSWORD INCORRECTE!");
        for (int i = 0; i < 3; i++) {
          digitalWrite(LED, HIGH);
          delay(200);
          digitalWrite(LED, LOW);
          delay(200);
        }
      }
      input = ""; 
    }
    else {
      input += key; 
    }
  }
}
